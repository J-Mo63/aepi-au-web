.top-pad
    .container
        .row
            h1 Forums
            = link_to "Add Forum", forums_new_path, class: "btn btn-success pull-right"
        br
        
        hr
        
        .row
            - @forums.each do |forum|
                .col-sm-6.col-md-4
                    .thumbnail
                        .caption
                            h3 = forum.name
                            br
                            p = forum.description
                            p
                                = link_to "View", forums_show_path, class: "btn btn-primary"
                                |  
                                a.btn.btn-default href="#" role="button" Edit
