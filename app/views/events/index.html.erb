<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Itemised budget</th>
      <th>Runsheet</th>
      <th>Start time</th>
      <th>Budget total</th>
      <th>Is approved</th>
      <th>Feedback</th>
      <th>Expected turnout</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.itemised_budget %></td>
        <td><%= event.runsheet %></td>
        <td><%= event.start_time %></td>
        <td><%= event.budget_total %></td>
        <td><%= event.is_approved %></td>
        <td><%= event.feedback %></td>
        <td><%= event.expected_turnout %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

