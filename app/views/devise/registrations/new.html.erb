<div class="container">
  <div class="row">
    <h1>Sign up</h1>
  </div>
  <br>
  <hr/>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= simple_form_for(resource, as: resource_name, :class => "form-signin", url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, required: false, autofocus: true, :class => "form-control" %>
          <%= f.input :first_name, required: true, :class => "form-control" %>
          <%= f.input :last_name, required: true, :class => "form-control" %>
          <%= f.input :username, required: true, :class => "form-control" %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :class => "form-control" %>
          <%= f.input :password_confirmation, required: true, :class => "form-control" %>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
          </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <br>
</div>
