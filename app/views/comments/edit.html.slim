.top-pad
    .container
        .row
            h1 Edit Comment
        br
        .row
            = link_to "Back", :back, class: "btn btn-default pull-left"
            = button_to "Delete Comment", comment_path(@comment), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger pull-right"
            br
            br
            hr
        br
        
        = simple_form_for @comment, url: comment_path(@comment), method: :put do |form|
            = form.input :body
            = form.button :submit, class: "btn btn-success pull-right"

        br
