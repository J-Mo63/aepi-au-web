<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :itemised_budget %>
    <%= f.input :runsheet %>
    <%= f.input :start_time %>
    <%= f.input :budget_total %>
    <%= f.input :is_approved %>
    <%= f.input :feedback %>
    <%= f.input :expected_turnout %>
    <%= f.input :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
