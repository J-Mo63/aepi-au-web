<div class="top-pad">
  <div class="container">
    <div class="row">
      <h1>Login</h1>
    </div>
    <br>
    <hr/>
    <div class="row squish">
      <%= simple_form_for(resource, as: resource_name, :class => "form-signin", url: session_path(resource_name)) do |f| %>
          <%= f.input :email, required: false, autofocus: true, :class => "form-control" %>
          <%= f.input :password, required: false, :class => "form-control" %>
          <div class="checkbox">
              <label>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </label>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
          </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
    <br>
  </div>
</div>
